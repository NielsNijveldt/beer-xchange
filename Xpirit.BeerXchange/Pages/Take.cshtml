@page
@model Xpirit.BeerXchange.TakeModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Beer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <p>Select the beer you want to take from the Xchange</p>
                <ul>
                    @foreach (var item in Model.AvailableBeers)
                    {
                    <li><input asp-for="SelectedBeer" type="radio" value="@item.Id" /> @item.Name</li>
                    }
                </ul>
            </div>
            <div class="form-group">
                <input type="submit" value="Enjoy your beer!" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
